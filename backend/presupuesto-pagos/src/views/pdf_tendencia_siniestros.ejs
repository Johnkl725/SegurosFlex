<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Tendencia Mensual de Siniestros</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 20px; }
    h1 { text-align: center; }
    table { width: 100%; border-collapse: collapse; margin-top: 20px; }
    th, td { border: 1px solid #333; padding: 8px; text-align: center; }
    th { background-color: #eee; }
  </style>
</head>
<body>
  <h1>Tendencia Mensual de Siniestros</h1>
  <table>
    <thead>
      <tr>
        <th>Mes</th>
        <th>Total Siniestros</th>
      </tr>
    </thead>
    <tbody>
      <% datos.forEach(function(item) { %>
      <tr>
        <!-- Suponemos que item.mes es un objeto Date o string en formato ISO -->
        <td><%= item.mes instanceof Date ? item.mes.toISOString().substring(0,10) : item.mes.substring(0,10) %></td>
        <td><%= item.total %></td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>
